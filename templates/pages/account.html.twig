{##
 # Display user account information.
 #}
{% extends 'layouts/base.twig' %}

{% block page_title %}Профиль пользователя{% endblock %}

{% block page_header %}
    <div class='page-header'>
        <h1>Профиль пользователя</h1>
    </div>
{% endblock %}

{% block page_contents %}
    <table class='table lines'>
        <tbody>
            <tr>
                <td>Имя:</td>
                <td>{{ user.name }}</td>
            </tr>
            <tr>
                <td>Email:</td>
                <td>{{ user.email }}</td>
            </tr>
        </tbody>
    </table>

    <div class='form-actions'>
        <a class='btn btn-default' href='/account/edit'>Редактировать</a>{#
        #}<a class='btn btn-default' href='/logout'>Выйти</a>
    </div>
{% endblock %}
