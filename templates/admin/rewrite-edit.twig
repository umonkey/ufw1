{% extends 'layouts/admin.twig' %}

{% block page_title %}Редирект{% endblock %}

{% block page_header %}
    <div class='page-header'>
        <h1>Редактирование редиректа</h1>
    </div>
{% endblock %}

{% block page_contents %}
    <form class='async' action='{{ request.path }}' method='post'>
        <div class='form-group'>
            <label>Источник</label>
            <input class='form-control' type='text' name='src' value='{{ item.src }}' required/>
        </div>

        <div class='form-group'>
            <label>Назначение</label>
            <input class='form-control' type='text' name='dst' value='{{ item.dst }}'/>
        </div>

        <div class='form-actions'>
            <button class='btn btn-primary' type='submit'>Сохранить</button>
        </div>

        <div id='msgbox'></div>
    </form>
{% endblock %}
